{
  "name": "@alwatr/pmpa-app",
  "version": "0.1.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "main": "main.js",
  "type": "module",
  "license": "MIT",
  "browserslist": "> 1.5%, not dead",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/pmpa",
    "directory": "packages/app"
  },
  "homepage": "https://github.com/Alwatr/pmpa#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/pmpa/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "serve": "wds",
    "build": "yarn run build:ts & yarn run build:es & yarn run build:11ty",
    "build:es": "nano-build --preset=pmpa",
    "build:11ty": "yarn node script/build.js",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es & yarn run watch:11ty & yarn serve",
    "watch:es": "yarn run build:es --watch",
    "watch:11ty": "yarn run build:11ty --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist .tsbuildinfo"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@alwatr/fetch": "^2.2.1",
    "@alwatr/font": "^1.2.0",
    "@alwatr/i18n": "^2.0.3",
    "@alwatr/icon-set-extra": "^0.4.0",
    "@alwatr/icon-set-material": "^2.0.1",
    "@alwatr/logger": "^2.4.1",
    "@alwatr/nano-build": "^1.2.0",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/server-context": "^1.2.6",
    "@alwatr/style": "^2.0.3",
    "@alwatr/tsconfig-base": "^1.0.4",
    "@alwatr/util": "^1.4.1",
    "@swc/html": "^0.0.28",
    "@types/alpinejs": "^3.13.5",
    "@web/dev-server": "^0.4.1",
    "alpinejs": "^3.13.3",
    "cssnano": "^6.0.2",
    "esbuild": "^0.19.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-variable-compress": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
